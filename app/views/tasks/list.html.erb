<div>
<form action="/task/create" method="get">
    <input type="submit" value="Create Task" 
         name="Submit" id="frm1_submit" />
</form>
</div>

<div>
    <ul>
    <% @tasks.each do |task| %> 
        <li>
            <div><%= task.title %>
            <% if task.done == false %>
                <%= button_to 'Done', "/task/check/#{task.id}", method: :patch %>
            <% end%>
            <%= button_to 'Delete', "/task/delete/#{task.id}", method: :delete %>
            <%= button_to 'Update', "/task/update/#{task.id}", method: :get %>
            </div>
        </li>
    <% end %>
    </ul>
</div>
